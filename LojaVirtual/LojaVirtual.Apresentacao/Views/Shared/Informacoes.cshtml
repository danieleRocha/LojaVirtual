@using LojaVirtual.Apresentacao.ViewModels
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap/css/bootstrap.css" media="screen" rel="stylesheet" />
    <link href="~/Content/Dani-bootstrap/css/Dani-bootstrap.css" media="screen" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <hr />
    </div>
    <div class="well container">
        <ul class="inline">
            <li>
                <blockquote>
                    <ul class="inline">
                        <li>
                            <img src="~/Content/Dani-bootstrap/img/Caminhao.ico" /></li>
                        <li>
                            <h6 style="color: #9370db">Entregamos para todo o Brasil!</h6>
                        </li>
                    </ul>
                </blockquote>
            </li>
            <li>
                <blockquote>
                    <ul class="inline">
                        <li>
                            <img src="~/Content/Dani-bootstrap/img/Cartao.ico" /></li>
                        <li>
                            @{
                                int nparcelas = HomeViewModel.NumeroMaximoDeParcelas();
                                string parcelamento = "Parcelamos em até " + nparcelas.ToString() + "x sem juros!";
                            }
                            <h6 style="color: #9370db">@parcelamento</h6>
                        </li>
                    </ul>
                </blockquote>
            </li>
            <li>
                <blockquote>
                    <ul class="inline">
                        <li>
                            <img src="~/Content/Dani-bootstrap/img/Conversa.ico" /></li>
                        <li>
                            <h6 style="color: #9370db">Tire suas dúvidas, Fale Conosco!</h6>
                        </li>
                    </ul>
                </blockquote>
            </li>
        </ul>
        <ul class="inline">
            <li>
                <blockquote>
                    <ul class="inline">
                        <li>
                            <img src="~/Content/Dani-bootstrap/img/Loja.ico" /></li>
                        <li>
                            <h6 style="color: #9370db">Conheça a nossa Loja!</h6>
                        </li>
                    </ul>
                </blockquote>
            </li>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <li>
                    <blockquote>
                        <ul class="inline">
                            <li>
                                <img src="~/Content/Dani-bootstrap/img/Facebook.ico" /></li>
                            <li>
                                <h6 style="color: #9370db">Siga-nos no Facebbok!</h6>
                            </li>
                        </ul>
                    </blockquote>
                </li>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <li>
                    <blockquote>
                        <ul class="inline">
                            <li>
                                <img src="~/Content/Dani-bootstrap/img/Cadastro.ico" /></li>
                            <li>
                                <h6 style="color: #9370db">Cadastre-se e receba nosssas promoções!</h6>
                            </li>
                        </ul>
                    </blockquote>
                </li>
        </ul>
    </div>
</body>
</html>
