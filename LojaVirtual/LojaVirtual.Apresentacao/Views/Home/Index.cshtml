    var mercadorias = (MercadoriasViewModel)ViewData[MercadoriasViewModel.Mercadorias];
    var nCategorias = mercadorias.TodasCategoriasDisponiveis.Count;

    var categorias = new List<string>();

    for (int i = 0; i < nCategorias; i++)
