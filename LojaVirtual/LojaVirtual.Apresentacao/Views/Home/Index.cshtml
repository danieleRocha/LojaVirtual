<script>
    $(document).click(function (e) {
        
        for (var i = 0; i < @nCategorias; i++) {
            
            var id = 'cat' + i;
                
            if (e.target.id == id) {
                  
                document.getElementById('categoriaSel').textContent = e.target.textContent;                 
            }
        }    
        return true;
    });
</script>

